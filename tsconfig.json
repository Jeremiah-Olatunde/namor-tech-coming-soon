{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "./env.d.ts", 
    "src/**/*", 
    "src/**/*.vue",
    "types/**/*.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "icons/*": ["./src/components/icons"],
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
